inline-block()
  display inline-block
  //IE7 fix
  zoom 1
  *display inline

choose-list()
  margin 0 0 0 -20px
  li
    inline-block()
    position relative
    margin 20px 0 0 20px
    width 200px
    height 150px
    cursor pointer
    border 8px solid #ccc
    border-image url("/images/border.png") 8 round repeat
    img
      width 100%
      height 100%
    .name
      position absolute
      bottom 0
      width 100%
      padding 10px 0
      background-color rgba(0,0,0,0.5)
      color white
      text-align center
      text-shadow -1px -1px 0 rgba(0,0,0,0.2)
