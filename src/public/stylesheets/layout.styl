@import 'mixins'

// Reset
ul, ol
  margin 0
  list-style none

body
  font-family 'GraphicPixel', sans-serif
  font-size 18px
  text-shadow 1px 1px 0 rgba(255,255,255,0.9)
  background url('/images/project_papper.png') repeat

.wall
  margin 20px
  margin-top 20px
  border 24px solid #ccc
  border-image url("/images/wall.png") 24 round repeat

.ground
  padding 20px
  background url('/images/snow.png') repeat

h1.logo
  margin 40px 0
  font-size 40px
  text-align center
  letter-spacing 0.1em

i
  inline-block()
  height 25px
  width 25px
  margin-right 5px
  background url("/images/sprite.png") no-repeat center center
  vertical-align text-bottom
  &.sign
    background-position 0 0
  &.sword
    background-position -25px 0
  &.crox
    background-position -50px 0
  &.directions
    background-position 0 -25px
  &.ball
    background-position -25px -25px
  &.grave
    background-position -50px -25px

.quest-canvas
  h2
    vertical-align middle

.clues
  margin 40px 0
  .clue
    margin-top 20px
  .next-clue
    cursor pointer

.next-worlds, .suspect
  margin 40px 0

ul.quests, ol.worlds, ol.suspects
  choose-list()
