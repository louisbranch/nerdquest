extends layout

block content
  h1 NerdQuest
  #quest-log

  script(type='text/template', id='quests-template')
    h1 Your Quests:
    ul.quests

  script(type='text/template', id='quest-template')
    h2 <%= name %>
    p <%= description %>
    ol.suspects
      <% _.each(suspects, function(suspect) { %>
      li <%= suspect.name %>
      <% }); %>
    button.start-quest Start

  script(type='text/template', id='worlds-template')
    h1 Worlds:

  script(type='text/template', id='world-template')
    h2 <%= name %>
